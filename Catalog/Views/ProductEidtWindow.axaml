<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Catalog.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Catalog.Views.ProductEidtWindow"
       x:DataType="viewModels:edit"
        Title="Edit">
    <Window.DataContext>
        <viewModels:edit></viewModels:edit>
    </Window.DataContext> 
    <StackPanel>
    <StackPanel DataContext="{Binding SelectedItem}">
        <TextBox Watermark="Id"  Text="{Binding ProductId}"  />
        <TextBox Watermark="Название" Text="{Binding Title}"/>
        <TextBox Watermark="год выпуска" Text="{Binding Year}"/>
        <TextBox Watermark="Цена" Text="{Binding Price}"/>
    </StackPanel>
        <Button Content="Сохранить"/>
        <Button Content="Удалить"/>
    </StackPanel>
</Window>
