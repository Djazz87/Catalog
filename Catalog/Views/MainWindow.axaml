<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Catalog.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Catalog.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Catalog">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <Grid RowDefinitions="Auto, Auto, *" ColumnDefinitions="Auto, Auto, Auto, Auto, Auto *" Margin="10"> 
    <DataGrid Grid.Row="1" Grid.Column="1" AutoGenerateColumns="False" ItemsSource="{Binding Product}" SelectedItem="{Binding SelectedItem}">
    <DataGrid.Columns>
        <DataGridTextColumn Header="Id" Binding="{Binding ProductId}"  />
        <DataGridTextColumn Header="Название" Binding="{Binding Title}"/>
        <DataGridTextColumn Header="год выпуска" Binding="{Binding Year}"/>
        <DataGridTextColumn Header="Цена" Binding="{Binding Price}"/>
    </DataGrid.Columns>
    </DataGrid>
    
        <Button VerticalAlignment="Top" 
                Grid.Row="0" Grid.Column="3"
                Content="Добавить"  
                Command="{Binding }"/>
        <Button VerticalAlignment="Top" 
                Grid.Row="0" Grid.Column="4"
                Content="Изменить"  
                Command="{Binding Rename }"/>
        <Button  VerticalAlignment="Top"
                 Grid.Row="0" Grid.Column="5"
            Content="Удалить" 
            Command="{Binding DeleteCommand}" />
            
    </Grid>
 

</Window>
